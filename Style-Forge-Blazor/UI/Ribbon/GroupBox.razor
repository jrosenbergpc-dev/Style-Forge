<div class="sf_groupbox">
    <table style="width: 100%; height: 10vh; margin: 0px;" cellpadding="0" cellspacing="0">
        <tr style="height: 9.6vh;">
            <td valign="top">
                @BodyContent
            </td>
        </tr>
        <tr>
            <td>
                <div class="sf_groupbox_title">
                @Title
                </div>
            </td>
        </tr>
    </table>
</div>
@code {
    [Parameter] public string Title { get; set; } = "Group Box";
    [Parameter] public RenderFragment? BodyContent { get; set; }
}
